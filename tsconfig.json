{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
